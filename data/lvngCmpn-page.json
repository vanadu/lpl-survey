{
  "name": "lvngCmpn_page",
  "elements": [
    {
      "type": "panel",
      "name": "lvngCmpnPanel",
      "elements": [
        {
          "type": "html",
          "name": "lvngCmpnAboutCompHeading",
          "html": "<h3>Tell us about your LarPar companion!<h3>"
        },
        {
          "type": "html",
          "name": "lvngCmpnAboutCompText",
          "html": "<p>We're focusing on dogs right now, but if you have a horse or cat with LP, feel free to answer the questions as best as you can. If a question doesn't apply, just leave it blank and skip to the next one.  </p>"
        },
        {
          "type": "panel",
          "name": "lvngCmpnDetailsPanel",
          "elements": [
              {
                "type": "panel",
                "name": "lvngCmpnDetailsAnimalType",
                "elements": [
                  {
                    "type": "radiogroup",
                    "name": "lvngCmpnAnimalType",
                    "title": "What kind of animal is Billie?",
                    "isRequired": true,
                    "choices": [
                      "Dog",
                      "Cat",
                      "Horse"
                    ]
                  }
                ]
              },
              {
              "type": "panel",
              "name": "lvngCmpnDetailsBreedGender",
              "title": "What is {lndgCmpnName}'s name and breed or breed mix and gender?",
              "elements": [
                {
                  "type": "text",
                  "name": "lvngCmpnBreed",
                  "title": "Breed or mix:",
                  "isRequired": true
                },
                {
                  "type": "boolean",
                  "name": "lvngCmpnGender",
                  "title": "Gender:",
                  "isRequired": true,
                  "labelTrue": "Female",
                  "labelFalse": "Male"
                }
              ]
            },
            {
              "type": "panel",
              "name": "lvngCmpnDetailsAge",
              "title": "What is {lndgCmpnName}'s age (in years and months) and gender?",
              "elements": [
                {
                  "type": "text",
                  "inputType": "number",
                  "name": "lvngCmpnAgeYears",
                  "title": "Age in years (number):",
                  "isRequired": true,
                  "min": "1",
                  "max": "40",
                   "validators": [
                    {
                      "type": "numeric",
                      "minValue": 1,
                      "maxValue": 40,
                      "text": "Age must be between 1 and 40"
                    }
                  ]
                },
                {
                  "type": "text",
                  "inputType": "number",
                  "name": "lvngCmpnAgeMonths",
                  "title": "Months (number 1 - 12)",
                  "isRequired": true,
                  "min": 1,
                  "max": 12,
                  "validators": [
                    {
                      "type": "numeric",
                      "minValue": 1,
                      "maxValue": 12,
                      "text": "Months must be between 1 and 12"
                    }
                  ]
                }
              ]
            },
            {
              "type": "panel",
              "name": "lvngCmpnDetailsWeight",
              "title": "About how much does {lndgCmpnName} weigh in pounds or kilos?",
              "elements": [
                {
                  "type": "text",
                  "name": "lvngCmpnWeight",
                  "title": "Weight (number):",
                  "isRequired": true,
                  "inputType": "number",
                  "min": 1,
                  "max": 2200,
                  "validators": [
                    {
                      "type": "numeric",
                      "minValue": 1,
                      "maxValue": 2200,
                      "text": "Weight must be between 1 and 2200"
                    }
                  ]
                },
                {
                  "type": "boolean",
                  "name": "lvngCmpnWeightUnits",
                  "title": "Please choose pounds or kilos:",
                  "isRequired": true,
                  "labelTrue": "Kg",
                  "labelFalse": "Lbs"
                }
              ]
            },
            {
              "type": "panel",
              "name": "lvngCmpnDetailsDemeanor",
              "title": "How energetic, excitable, or anxious is {lndgCmpnName}? (1=very calm, 5=very excitable)?",
              "elements": [
                {
                  "type": "rating",
                  "name": "lvngCmpnDemeanor",
                  "title": ""
                  
                }
              ]
            }

          ]
        }
      ]
    }
  ]
}